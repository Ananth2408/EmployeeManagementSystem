<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  
    <class name="com.ideas2it.employee.model.Employee" table="Employee">

          <id name="id" column = "employee_id">  
              <generator class="increment"></generator>  
          </id>

          <property name = "firstName" column = "first_name"></property>
          <property name = "lastName" column = "last_name"></property>
          <property name = "dateOfBirth" column = "date_of_birth"></property>
          <property name = "phoneNumber" column = "phone_number" unique = "true"></property>
          <property name = "dateOfJoining" column = "date_of_joining"></property>
          <property name = "email" column = "email" unique = "true"></property>
          <property name = "salary" column = "salary"></property>
          <property name = "gender" column = "gender"></property>
          <property name = "role" column = "role"></property>

          <bag name = "address" cascade = "all" lazy = "true">
              <key column = "employee_id"></key>  
              <one-to-many class = "com.ideas2it.employee.model.Address"/>
          </bag>
    </class>
</hibernate-mapping>