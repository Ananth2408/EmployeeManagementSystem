<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  
    <class name="com.ideas2it.employee.model.Address" table="Address">

          <id name="id" column = "address_id">
              <generator class="increment"></generator>
          </id>

          <property name = "doorNumber" column = "door_number"></property>
          <property name = "street" column = "street"></property>
          <property name = "city" column = "city"></property>
          <property name = "state" column = "state"></property>
          <property name = "pinCode" column = "pincode"></property>
          <property name = "type" column = "address_type"></property>
    </class>
</hibernate-mapping>