<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  
    <class name="com.ideas2it.employee.model.Project" table="Project">

          <id name="id" column = "project_id">  
              <generator class="increment"></generator>  
          </id>

          <property name = "projectName" column = "project_name"></property>
          <property name = "technology" column = "technology"></property>
          <property name = "clientName" column = "clientName"></property>
          <property name = "clientMailId" column = "client_mailid"></property>
          <property name = "startDate" column = "start_date"></property>
          <property name = "dueDate" column = "due_date"></property>
          <property name = "endDate" column = "end_date"></property>

          <bag name = "employee" cascade = "save-update" table = "employee_project">
              <key column = "project_id"></key>  
              <many-to-many column = "employee_id" class = "com.ideas2it.employee.model.Employee"/>
          </bag>
    </class>
</hibernate-mapping>